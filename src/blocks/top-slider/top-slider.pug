mixin top-slider(mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' loader--' + modsList[i].trim();
      }
    }

  section(class=allMods)&attributes(attributes)
    .top-slider__container
      .top-slider__item
          img(src='/img/interior_detail_by_ELFTUG.png', alt='top-slide1')
      //- .top-slider__item
      //-   img(src='img/interior_detail_by_ELFTUG.png', alt='top-slide2')
      //- .top-slider__item
      //-   img(src='img/interior_detail_by_ELFTUG.png', alt='top-slide3')
      //- .top-slider__item
      //-   img(src='img/interior_detail_by_ELFTUG.png', alt='top-slide4')
      //- .top-slider__item
      //-   img(src='img/interior_detail_by_ELFTUG.png', alt='top-slide5')
      .top-slider__arrow.top-slider__arrow--left
      .top-slider__arrow.top-slider__arrow--right
    ul.top-slider__dots
        li.top-slider__dots-item
          a.top-slider__dots-link(href='#')
        li.top-slider__dots-item
          a.top-slider__dots-link(href='#')

mixin top-slider(mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' loader--' + modsList[i].trim();
      }
    }

  section
    .top-slider__container.col-12
      .top-slider__item
          img(src='/img/interior_detail_by_ELFTUG.png', alt='top-slide1')


//- extends ../pug/layout.pug
include ../pug/mixins.pug

doctype html
html(class='page no-js', lang='ru')

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='date=no')
    meta(name='format-detection', content='address=no')
    meta(name='format-detection', content='email=no')
    meta(content='notranslate', name='google')
    //- Фавиконки (https://realfavicongenerator.net)
    link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon-16x16.png')
    link(rel='manifest', href='/site.webmanifest')
    meta(name='msapplication-TileColor', content='#00a300')
    meta(name='theme-color', content='#ffffff')
    //- meta(name='msapplication-TileColor', content='#5bbad5')    //- (meta(name='theme-color', content='#000')
    //- meta(name='msapplication-navbutton-color', content='#000')
    //- meta(name='apple-mobile-web-app-status-bar-style', content='#000')

    block meta
      title DotDesign | Home

    block head
      link(rel='stylesheet', href='css/bootstrap-grid.css')
      link(rel='stylesheet', href='css/style.css')
      script
        include ../js/head-script.js

  body
    noscript У вас отключен JavaScript. Это пугает.
    .page__inner
      +page-header(page-header)(class='row no-gutters')
        +logo('/', 'main')
        nav.page-header__nav.row.no-gutters
          +main-nav()(class='col-9')
          .page-header__search-wrap.col-3
            form.page-header__search-form(id='search-form', name='search-form', action='none', method='post')
              input.page-header__search-input(type='type', id='search-input', name='search-input')
              input.page-header__search-submit(type='submit', value='Search')

      .page__content.no-gutters
        main.row.no-gutters
          +top-slider()(class='top-slider col-12')

          sectiom.greeting.row.no-gutters
              h2.greeting__text.col-12 Hello, my name is #[a.greeting__blue-text(href='#')!= 'Jennifer Doe'] and I'm a top freelance interior designer. This is my online portfolio. If you like my work, #[a.greeting__blue-text(href='#')!= 'contact me'] and I'll see what I can do for you...

          +details()(class='details row')

          +bottom-slider()(class='bottom-slider row')

          +page-footer()(class='row')
            .footer__item.col-3
              h3.page-footer__subhead Latest posts
              ul.page-footer__posts-list
                li.page-footer__posts-item
                  a.page-footer__list-link(href='#') Graphic Design
                li.page-footer__posts-item
                  a.page-footer__list-link(href='#') Web Design
                li.page-footer__posts-item
                  a.page-footer__list-link(href='#') Logo
                li.page-footer__posts-item
                  a.page-footer__list-link(href='#') Custom CMS
                li.page-footer__posts-item
                  a.page-footer__list-link(href='#') Web Hosting

            .page-footer__item.col-3
              h3.page-footer__subhead Twitter Updates
              .page-footer__twitter-post
                p.page-footer__twiter-post Check out Dot Interior - Free PSD by
              .page-footer__twitter-time about 10&nbsp;hours ago

            .page-footer__item.col-3
              h3.page-footer__subhead Contact Info
              p.page-footer__contact-info A: Street 95, United States
              p.page-footer__contact-info T: #[a.page-footer__contact-info-link(href='tel:+000012345678')!= '+ (0) 000-1234-5678']
              p.page-footer__contact-info F: #[a.page-footer__contact-info-link(href='tel:+000012345678')!= '+ (0) 000-1234-5678']
              p.page-footer__contact-info E: #[a.page-footer__contact-info-link(href='mailto:yourmail@yoursite.com')!= 'yourmail@yoursite.com']
              p.page-footer__contact-info E-2: #[a.page-footer__contact-info-link(href='mailto:yourmail2@yoursite.com')!= 'yourmail2@yoursite.com']

            .page-footer__item.col-3
              h3.page-footer__subhead Newsletter Signup
              form.page-footer__signup(method='post', action='')
                label.page-footer__signup-label(for='nesletter-signup-name') Name#[span.page-footer__signup-label--request-field!= '*']
                input.page-footer__signup-input(type='text', name='nesletter-signup-name')
                label.page-footer__signup-label(for='') Email#[span.page-footer__signup-label--request-field!= '*']
                input.page-footer__signup-input(type='text')
                submit.page-footer__btn Sign Up Now

          .page-footer__bottom.row
            .col-10
              ul.page-footer__nav-list
                li.page-footer__nav-item
                  a.page-footer__nav-link.page-footer__nav-link--active(href='#') Home
                li.page-footer__nav-item
                  a.page-footer__nav-link(href='#') About
                li.page-footer__nav-item
                  a.page-footer__nav-link(href='#') Services
                li.page-footer__nav-item
                  a.page-footer__nav-link(href='#') Portfolio
                li.page-footer__nav-item
                  a.page-footer__nav-link(href='#') Contact
            p.page-footer__copyright © Copyright 2011. All rights reserved. Template created by: #[a.page-footer__copyright-link(href='#')!= 'Vladimir Babić']&emsp;/&emsp;www.vladimirbabic.net
            .col-2
              a.page-footer__logo-link(href='#')
                img.page-footer__logo-img(src='', alt='')

